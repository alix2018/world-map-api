version: '3'
services:
  postgres:
    image: postgres
    logging:
      driver: "json-file"
      options:
          max-size: "10m"
          max-file: "5"
    environment:
      - POSTGRES_USER=
      - POSTGRES_PASSWORD=
      - POSTGRES_DB=
    volumes:
      - ./postgres/data:/var/lib/postgresql/data

  nodejs:
    image: world-map-api:0.2.0
    ports:
      - 3000:3000
    environment:
      - DATABASE_HOST=
      - DB_USER=
      - PGPASSWORD=
    depends_on:
      - postgres